<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ResourceBase">
		<defName>Asimov_Chargepack</defName>
		<label>mechanoid power cell (charged)</label>
		<description>Consumable cells of energy used by mechanoids and mechadroids to recharge. Charged and ready to be used.</description>
		<graphicData>
			<texPath>Mechadroids/Item/PowerCell</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<socialPropernessMatters>true</socialPropernessMatters>
		<statBases>
			<MarketValue>10</MarketValue>
			<Mass>0.025</Mass>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>0.3</Flammability>
			<Nutrition>1</Nutrition>
		</statBases>
		<ingestible>
			<foodType>Meal</foodType>
			<maxNumToIngestAtOnce>1</maxNumToIngestAtOnce>
			<preferability>MealLavish</preferability>
			<tasteThought>AteLavishMeal</tasteThought>
			<ingestEffect>EatVegetarian</ingestEffect>
			<ingestSound>Meal_Eat</ingestSound>
			<optimalityOffsetHumanlikes>16</optimalityOffsetHumanlikes>
		</ingestible>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<effectWorking>Cook</effectWorking>
			<soundWorking>Recipe_Machining</soundWorking>
			<workAmount>800</workAmount>
			<targetCountAdjustment>5</targetCountAdjustment>
			<productCount>5</productCount>
			<workSkill>Crafting</workSkill>
			<recipeUsers>
				<li>FabricationBench</li>
			</recipeUsers>
			<researchPrerequisite>Mechadroids_Mechanoids_PowerCells</researchPrerequisite>
		</recipeMaker>
		<costList>
			<Chemfuel>2</Chemfuel>
			<Plasteel>3</Plasteel>
		</costList>
		<modExtensions>
			<li Class="TabulaRasa.HarmonyPatches.DefModExt_OutputFromEdible">
				<outputThing>Asimov_Chargepack_Empty</outputThing>
			</li>
		</modExtensions>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>

	<ThingDef ParentName="ResourceBase">
		<defName>Asimov_Chargepack_Empty</defName>
		<label>mechanoid power cell (depleted)</label>
		<description>Consumable cells of energy used by mechanoids and mechadroids to recharge. This one appears to be dead, and can be charged in a charging station.</description>
		<graphicData>
			<texPath>Mechadroids/Item/EmptyPowerCell</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<statBases>
			<MarketValue>10</MarketValue>
			<Mass>0.025</Mass>
			<MaxHitPoints>50</MaxHitPoints>
			<Flammability>0.3</Flammability>
		</statBases>
		<thingCategories>
			<li>Manufactured</li>
		</thingCategories>
	</ThingDef>

</Defs>